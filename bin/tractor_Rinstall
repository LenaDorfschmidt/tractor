#! /bin/bash

export R_INSTALL_VANILLA=1
export R_COMPILE_PKGS=1

keep_going=0

usage()
{
    echo "tractor_Rinstall (program v3.0.0)"
    echo "TractoR-specific wrapper for installing R packages"
    echo
    echo "Usage: tractor_Rinstall [-k] pkg_path [pkg_path ...]"
    echo
}

[ "$1" = "-k" ] && {
    keep_going=1
    shift
}

[ $# -lt 1 ] && {
    usage 1>&2
    exit
}

while [ $# -gt 0 ]; do
    name=`basename "$1"`
    echo -n "Installing R package \"${name%_*}\"... "
    
    # Use tractor.base to check if we're in a TractoR directory
    if [ -d tractor.base -a -d lib/R ]; then
        R CMD INSTALL --library=lib/R --clean "${1}" >>install.log 2>&1
    elif [ ! -z "${TRACTOR_HOME}" -a -d "${TRACTOR_HOME}/lib/R" ]; then
        R CMD INSTALL --library="${TRACTOR_HOME}/lib/R" --clean "${1}" >>install.log 2>&1
    else
        R CMD INSTALL --clean "${1}" >>install.log 2>&1
    fi
    
    if [ $? -eq 0 ]; then
        echo "OK"
    else
        echo "FAIL"
        if [ $keep_going -eq 0 ]; then
            cat install.log
            exit 1
        fi
    fi
    shift
done
